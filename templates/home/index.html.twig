{% extends 'base.html.twig' %}

{% block title %}Symfony Blog{% endblock %}

{% block body %}
<div class="flex flex-col items-center">
    <div class="max-w-md">
        {% for post in posts %}
        <div class="py-8 border-b-2 border-grey-lighter">
            <div class="flex items-center justify-between">
                <a href="/post/{{post.id}}" class="text-2xl no-underline font-semibold text-blue-darker">
                    {{ post.title }}
                </a>
            </div>
            <div class="text-grey-darker mt-4 text-sm">{{ post.userId.username }}</div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
