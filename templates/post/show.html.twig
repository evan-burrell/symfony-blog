{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
<h1>{{ post.title }}</h1>
<p>{{ post.body }}</p>

<h4>Comments</h4>
{% for comment in post.comments %}
    <p>{{ comment.userId.username }} said {{ comment.body }}</p>
    {% if app.user %}
        {% if app.user.username == comment.userId.username %}
        <a href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a>
        {% endif %}
    {% endif %}
{% endfor %}

{% if app.user %}
<a href="{{ path('comment_new', {'id': post.id}) }}">Add comment</a>
<a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
{{ include('post/_delete_form.html.twig') }}
{% endif %}

{% endblock %}
